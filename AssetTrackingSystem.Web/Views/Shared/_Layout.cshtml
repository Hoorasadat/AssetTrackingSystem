<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
            crossorigin="anonymous"
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="abbsolute"
            asp-suppress-fallback-integrity="true">
    </environment>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.jpeg" asp-append-version="true" width="200">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Assets" asp-action="Index" style="font-size: 18px; font-weight: bold;">Asset</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Assets" asp-action="Create" style="font-size: 18px; font-weight: bold;">Add Asset</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Assets" asp-action="Assign" style="font-size: 18px; font-weight: bold;">Assignment</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Assets" asp-action="Unassign" style="font-size: 18px; font-weight: bold;">Unassignment</a>
                            </li>
                            @* <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="AssetTypes" asp-action="Index" style="font-size: 18px; font-weight: bold;">Asset Types</a>
                            </li>
                    
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Models" asp-action="Index" style="font-size: 18px; font-weight: bold;">Models</a>
                            </li>
                   
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Manufacturers" asp-action="Index" style="font-size: 18px; font-weight: bold;">Manufacturers</a>
                            </li> *@
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>


    <div class="container d-flex flex-column">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="fixed-bottom" >
        <footer class="container" style="background-color: #333; color: #fff; padding: 20px; text-align: center;">

            <div class="container">
                &copy; 2023 - AssetTrackingSystem.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
