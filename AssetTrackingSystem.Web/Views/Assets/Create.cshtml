@model EditAssetViewModel

@{
    ViewData["Title"] = "Edit Asset";
}


<h1 class="text-center text-primary fw-bold m-5">Add a New Asset</h1>


<form method="post" asp-controller="Assets" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <label asp-for="TagNumber" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="TagNumber" class="form-control" />
            <span asp-validation-for="TagNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="AssetTypeId" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="AssetTypeId" class="form-control" />
            <span asp-validation-for="AssetTypeId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="ManufacturerId" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="ManufacturerId" class="form-control form-select" asp-items="@ViewBag.Manufacturer">
                <option value="">Select the Manufacturer</option>
            </select>
            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="ModelId" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="ModelId" class="form-control" />
            <span asp-validation-for="ModelId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Description" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="AssignedTo" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="AssignedTo" class="form-control" />
            <span asp-validation-for="AssignedTo" class="text-danger"></span>
        </div>
    </div>

    @* <div class="row mb-2">
        <label asp-for="AssignedTo" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="AssignedTo" class="form-control form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value=""> Select Gender</option>
            </select>
            <span asp-validation-for="AssignedTo" class="text-danger"></span>
        </div>
    </div> *@

    <div class="row mb-2">
        <label asp-for="SerialNumber" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="SerialNumber" class="form-control" />
        </div>
    </div>

    <div class="row">
        <button type="submit" class="btn btn-primary col-md-2 ms-2 me-2">Add</button>
        <a asp-controller="Assets" asp-action="Index" class="btn btn-secondary col-md-2 ms-2 me-2">Cancel</a>
    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}