@model EditAssetViewModel

@{
    ViewData["Title"] = "Edit Asset";
}


@* <h1 class="text-center text-primary fw-bold m-5">Updating @Model.Description</h1> *@


<form method="post" asp-controller="Assets" asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" hidden />

    <div class="row">
        <label asp-for="TagNumber" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="TagNumber" class="form-control" />
            <span asp-validation-for="TagNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="AssetTypeId" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="AssetTypeId" class="form-control form-select" asp-items="@ViewBag.AssetTypes">
                <option value="">Select the Asset Type</option>
            </select>
            <span asp-validation-for="AssetTypeId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="ManufacturerId" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="ManufacturerId" class="form-control form-select" asp-items="@ViewBag.Manufacturers">
                <option value="">Select the Manufacturer</option>
            </select>
            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="ModelId" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="ModelId" class="form-control form-select" asp-items="@ViewBag.Models">
                <option value="">Select the Model</option>
            </select>
            <span asp-validation-for="ModelId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="Description" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="AssignedTo" class="col-form-label col-md-2"></label>
        <div class="col-md-6 mb-2 mt-2">
            <select asp-for="AssignedTo" class="form-control form-select" asp-items="@ViewBag.Employees">
                @{
                    if (string.IsNullOrEmpty(Model.AssignedTo))
                    {
                        <option value="">Select the Employee</option>
                    }
                }
            </select>
            <span asp-validation-for="AssignedTo" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label asp-for="SerialNumber" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="SerialNumber" class="form-control" />
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <a asp-controller="Assets" asp-action="Index" class="btn btn-secondary col-md-2 m-2">Cancel</a>
        <button type="submit" class="btn btn-primary col-md-2 m-2">Update</button>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}